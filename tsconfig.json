{
  "compilerOptions": {
    // Enable latest features
    "target": "esnext",
    "module": "esnext",

    // Bundler mode

    // Emit
    "moduleResolution": "bundler",
    "declaration": true,
    "noEmit": true,
    "composite": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    // "moduleResolution": "bundler",

    // Best practices
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"]
}
